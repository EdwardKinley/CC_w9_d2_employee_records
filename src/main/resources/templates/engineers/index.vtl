<p class="pageHeader">All Engineers</p>

<div>
    <table>
        <tr>
            <th>id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Salary</th>
            <th>Department</th>
        </tr>
        #foreach ($engineer in $engineers)
        <tr>
            <td><a href="/engineers/$engineer.getId()">$engineer.getId()</a></td>
            <td>$engineer.getFirstName()</td>
            <td>$engineer.getLastName()</td>
            <td>$engineer.getSalary()</td>
            <td>$engineer.getDepartment().getTitle()</td>
        </tr>
        #end
    </table>
</div>

<br>

<div>
    <a href="/engineers/new" class="button center">Add new Engineer</a>
</div>

